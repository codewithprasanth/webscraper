# WhatsApp Configuration
# Format: country_code + phone_number + @c.us
# Example: For +91 7200632341, use 917200632341@c.us
WHATSAPP_PHONE_NUMBER=917200632341@c.us

# Send notification when scraping starts
WHATSAPP_NOTIFICATION_START=true

# Scraper Configuration
# The website to scrape
TARGET_URL=https://roobai.com/

# How often to scrape the website (in milliseconds)
# 30000 = 30 seconds, 60000 = 1 minute
SCRAPE_INTERVAL=30000

# Filter Configuration
# Minimum discount percentage to send notification
MIN_DISCOUNT_PERCENTAGE=90

# Product keywords to include (comma-separated, case-insensitive)
# Only products with discount >= MIN_DISCOUNT_PERCENTAGE OR matching these keywords will be sent
PRODUCT_KEYWORDS=mouse,laptop,monitor

# Server Configuration
# Port for the Express server
SERVER_PORT=8080

# Logging
# Set to true for detailed logs
DEBUG_MODE=false
